worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile        on;  
    keepalive_timeout  65;
    
    # Settings for large file responses
    send_timeout 300s;              # Timeout for sending response to client (5 min)
    client_body_timeout 60s;
    client_header_timeout 60s;
    
    # Buffer settings
    client_body_buffer_size 128k;
    client_max_body_size 100M;      # For uploads
    output_buffers 32 512k;         # Increased for large file responses
    postpone_output 0;              # Send data immediately without buffering
    
    # Proxy buffer settings
    proxy_buffer_size 256k;
    proxy_buffers 8 256k;
    proxy_busy_buffers_size 512k;
    proxy_read_timeout 300s;        # Timeout reading from backend
    
    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json image/svg+xml;
    
    # Set cache for static files
    map $sent_http_content_type $expires {
        default                    off;
        text/html                  epoch;
        text/css                   30d;
        application/javascript     30d;
        image/png                  7d;
        image/jpg                  7d;
        image/jpeg                 7d;
        image/gif                  7d;
        image/svg+xml              30d;
        video/mp4                  30d;
        video/webm                 30d;
        video/quicktime            30d;
    }
    
    # Set Accept-Ranges header based on file type for internal serving
    map $uri $accept_ranges {
        ~*\.(mp4|mov|avi|mkv|webm|m4v|3gp|flv)$  bytes;
        default                                    none;
    }
    
    server {
        listen       80;
        server_name  localhost;
        # server_name  _;  # Catch-all patterns is not needed as I only have one domain
        
        # Set expires for this server        
        expires $expires;
		
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;	
		
        # Next.js API media proxy (validates X-API-Key from client)
        location /api/media/ {
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $http_host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_pass http://frontend:3000;
        }
		
        # Backend API routes
        location /api/ {
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $http_host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_pass http://api:5001;
        }

        # Internal nginx-only location for X-Accel-Redirect 
        # for nginx to serve static files after they have been authenticated by the api
        location /xaccel/ {
            internal;
            alias /pictures/;
            autoindex off;
            
            # Disable range requests entirely for images (set max_ranges to 0)
            # This prevents nginx from automatically adding Accept-Ranges: bytes
            max_ranges 0;
            
            # Increase buffer sizes for large files
            proxy_buffering off;
            tcp_nodelay on;
            
            # Now we can safely set Accept-Ranges to none via add_header
            add_header Accept-Ranges $accept_ranges;
            add_header Cache-Control "public, no-transform";
            
            # CORS headers
            # add_header Access-Control-Allow-Origin $http_origin always;
            add_header Access-Control-Allow-Origin "$scheme://$http_host" always;
            add_header Access-Control-Allow-Credentials "true" always;
            add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
            add_header Access-Control-Allow-Headers "Authorization, X-API-Key, Content-Type, Range" always;
            
            expires 7d;

            sendfile on;
            tcp_nopush on;
            # tcp_nodelay on;
            output_buffers 1 512k;
            postpone_output 0;
            
        }

        # Small Thumbnails (400px) - direct serving without X-API-Key validation and authentication
        location /pictures/_thumbnails/400/ {            
            alias /pictures/_thumbnails/400/;
            autoindex off;
            try_files $uri =404;
            
            # CORS headers
            add_header Access-Control-Allow-Origin $http_origin always;
            add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
            add_header Access-Control-Allow-Headers "X-API-Key, Range" always;
            add_header Access-Control-Allow-Credentials "true" always;
            
            if ($request_method = 'OPTIONS') {
                return 204;
            }
            
            # Add cache headers for thumbnails
            expires 7d;
            add_header Cache-Control "public, no-transform";
            add_header Vary "Accept-Encoding";
        }

        # Large Thumbnails - requires X-API-Key validation
        location /pictures/_thumbnails/ {
            if ($http_x_api_key = "") {
                return 403;
            }

            #check validity of API key not just that it exists
            auth_request /auth/validate-picture;     
            auth_request_set $auth_status $upstream_status;

            alias /pictures/_thumbnails/;
            autoindex off;
            try_files $uri =404;
            
            # CORS headers
            add_header Access-Control-Allow-Origin $http_origin always;
            add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
            add_header Access-Control-Allow-Headers "X-API-Key, Range" always;
            add_header Access-Control-Allow-Credentials "true" always;
            
            if ($request_method = 'OPTIONS') {
                return 204;
            }
            
            # Add cache headers for thumbnails
            expires 7d;
            add_header Cache-Control "public, no-transform";
            add_header Vary "Accept-Encoding";
        }

        # Pictures - proxied to API for validation, then served via X-Accel-Redirect
        location /pictures/ {            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $http_host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_set_header Authorization $http_authorization;
            proxy_set_header Cookie $http_cookie;
            
            proxy_hide_header Accept-Ranges;
            
            proxy_pass http://api:5001/api/v1/pictures/;
        }
        
        # Auth validation endpoint (internal)
        location /auth/validate-picture {
            internal;
            proxy_method GET;
            proxy_pass http://api:5001/api/v1/auth/validate-picture;
            proxy_pass_request_body off;
            proxy_set_header Content-Length "";
            #proxy_set_header X-Original-URI $request_uri;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_set_header Authorization $http_authorization;
            proxy_set_header Cookie $http_cookie;
        }

        #access_log  logs/host.access.log  main;
        # Root - proxy to Next.js frontend
        location / {
            #root   html;
            #index  index.html index.htm;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $http_host;  #host sent by client
            #proxy_set_header X-Forwarded-Host $host;      #nginx host
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://frontend:3000;
        } 

        # Error pages
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }
    }


