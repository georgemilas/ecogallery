worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile        on;  
    keepalive_timeout  65;
    
    # Enable gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json image/svg+xml;
    
    # Set cache for static files
    map $sent_http_content_type $expires {
        default                    off;
        text/html                  epoch;
        text/css                   30d;
        application/javascript     30d;
        image/png                  7d;
        image/jpg                  7d;
        image/jpeg                 7d;
        image/gif                  7d;
        image/svg+xml              30d;
        video/mp4                  30d;
        video/webm                 30d;
        video/quicktime            30d;
    }
    
    server {
        listen       80;
        server_name  localhost;
        
        # Set expires for this server
        expires $expires;
		
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;	
		
		location /api/ {
			proxy_set_header Host $host;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header X-Forwarded-Host $host;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Forwarded-Proto $scheme;
			proxy_pass http://localhost:5001;
			
		}

        # Small Thumbnails - direct serving without X-API-Key validation
        location /pictures/_thumbnails/400/ {            
            alias E:/TotulAici/TutuLaptop/pictures/_thumbnails/400/;
            autoindex off;
            try_files $uri =404;
            
            # Add cache headers for thumbnails
            expires 7d;
            add_header Cache-Control "public, no-transform";
            add_header Vary "Accept-Encoding";
        }

		# Thumbnails - direct serving with X-API-Key validation
        location /pictures/_thumbnails/ {
            if ($http_x_api_key = "") {
                return 403;
            }

			#check validity of API key not just that it exists
			auth_request /auth/validate-picture;     
            auth_request_set $auth_status $upstream_status;

            alias E:/TotulAici/TutuLaptop/pictures/_thumbnails/;
            autoindex off;
            try_files $uri =404;
            
            # Add cache headers for thumbnails
            expires 7d;
            add_header Cache-Control "public, no-transform";
            add_header Vary "Accept-Encoding";
        }

		# Pictures - proxied to API for validation, then served via X-Accel-Redirect
        location /pictures/ {            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_set_header Authorization $http_authorization;
            proxy_set_header Cookie $http_cookie;
            proxy_pass http://localhost:5001/api/v1/pictures/;
        }
        
        # Auth validation endpoint 
        location = /auth/validate-picture {
            internal;
            proxy_pass http://localhost:5001/api/v1/auth/validate-picture;
            proxy_pass_request_body off;
            proxy_set_header Content-Length "";
            proxy_set_header X-Original-URI $request_uri;
            proxy_set_header X-API-Key $http_x_api_key;
            proxy_set_header Authorization $http_authorization;
            proxy_set_header Cookie $http_cookie;
        }
        
        # Internal nginx-only location for X-Accel-Redirect
        location /pictures/internal/ {
            internal;
            alias E:/TotulAici/TutuLaptop/pictures/;
            autoindex off;
            
            # Enable range requests for video seeking
            location ~* \.(mp4|mov|avi|mkv|webm|m4v|3gp|flv)$ {
                add_header Accept-Ranges bytes;
                add_header Cache-Control "public, no-transform";
                expires 30d;  # Longer cache for videos
                
                # Optimize for large files
                sendfile on;
                tcp_nopush on;
                tcp_nodelay on;
            }
        }

        #access_log  logs/host.access.log  main;

        location / {
            #root   html;
            #index  index.html index.htm;
            proxy_set_header Host $host;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header X-Forwarded-Host $host;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
			proxy_set_header X-Forwarded-Proto $scheme;
			proxy_pass http://localhost:3000;
        } 

        # redirect server error pages to the static page /50x.html
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }

    }


